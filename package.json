{
    "name": "election",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": "18"
    },
    "workspaces": [
        "src/*"
    ],
    "scripts": {
        "dev": "docker-compose up --build",
        "stop": "docker-compose down",
        "build": "run-p build:web build:api",
        "build:web": "npm run build -w src/election-frontend",
        "build:api": "cd src/election-backend && (if exist mvnw.cmd (mvnw.cmd clean install) else (./mvnw clean install))",
        "preview": "run-p preview:api preview:web",
        "preview:api": "cd src/election-backend && (if exist mvnw.cmd (mvnw.cmd spring-boot:run) else (./mvnw spring-boot:run))",
        "preview:web": "npm run preview -w src/election-frontend",
        "test": "npm run test -w src/tests",
        "typedoc": "typedoc"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "6.20.0",
        "@typescript-eslint/parser": "6.20.0",
        "eslint": "8.56.0",
        "npm-run-all": "4.1.5",
        "tsx": "4.7.0",
        "typedoc": "0.25.13",
        "typescript": "5.3.3",
        "vite": "^5.4.8"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bcryptjs": "^2.4.3",
        "chart.js": "^4.4.6",
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.11.3",
        "primeicons": "^7.0.0",
        "primevue": "^4.2.2",
        "sequelize": "^6.37.4"
    }
}
