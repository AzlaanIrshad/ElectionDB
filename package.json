{
    "name": "election",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": "18"
    },
    "workspaces": [
        "src/*"
    ],
    "scripts": {
        "dev": "run-p dev:api dev:web",
        "dev:db": "docker-compose -f docker-compose.yml up",
        "dev:api": "cd src/election-backend && node app.js",
        "dev:web": "cd src/election-frontend && npm run dev",
        "build": "run-p build:web build:api",
        "build:web": "npm run build -w src/election-frontend",
        "build:api": "cd src/election-backend && mvn clean install",
        "preview": "run-p preview:api preview:web",
        "preview:api": "npm run preview -w src/election-backend",
        "preview:web": "npm run preview -w src/election-frontend",
        "test": "npm run test -w src/tests",
        "typedoc": "typedoc"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "6.20.0",
        "@typescript-eslint/parser": "6.20.0",
        "eslint": "8.56.0",
        "npm-run-all": "4.1.5",
        "tsx": "4.7.0",
        "typedoc": "0.25.13",
        "typescript": "5.3.3",
        "vite": "^5.4.8"
    },
    "dependencies": {
        "axios": "^1.7.7",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.11.3",
        "sequelize": "^6.37.4"
    }
}
